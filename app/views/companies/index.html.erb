            <p>Jobs <span><%= tri_company[1].jobs.size %></span> Connections <span><%= tri_company[1].linkedinusers.size %></span></p>
          </div>
        </div>
      <% end %>
    </div>


    <div class="span4 company">
      <%= link_to (tri_company[2]) do %>
