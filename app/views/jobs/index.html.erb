<h1>Index for Jobs</h1>

<h3>Number of jobs listed: <%= @jobs.size %></h3>

<nav>
  <%= link_to 'All Companies', companies_path %> | <%= link_to 'Companies with Jobs', companies_with_jobs_path %> | <%= link_to 'Jobs with Connections', jobs_with_connections_path %> | <%= link_to 'Alumni Network', show_connections_path %>
</nav>

<div class="row" style="margin-top: 16px;">
  <div class="span10">
    <h1>Jobs</h1>

     <table class="table table-striped">
        <tr>
          <th>Company</th>
          <th>Title</th>
          <th>City</th>
        </tr>        
      <% @jobs.each do |job| %>
        <tr>
          <th><%= link_to job.company.company_linkedin_name, job.company%></th>
          <th><%= link_to job.title, job %></th>
          <th><%= job.city %></th>
        </tr>  
      <% end %>
      </table>
  </div>
</div>
<br>