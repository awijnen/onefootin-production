        </tr>        
      <% Job.all.each do |job| %>
        <% if Position.find_by_company_id(job.company.id) != nil %>
        <tr>
            <th><%= job.company.company_linkedin_name %></th>
            <th><%= job.title %></th>
            <th><%= job.city %></th>
            <th><%= Linkedinuser.find_by_id(ConnectionsLinkedinuser.where(:connection_id => Linkedinuser.find_by_id(Position.find_by_company_id(Job.all[86].company.id).linkedinuser_id)
